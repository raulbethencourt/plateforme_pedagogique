{{ form_start(form) }}

{{ form_row(form.title) }}
{{ form_row(form.type) }}
{{ form_row(form.instructions) }}

{% set error_flag = form_errors(form.imageFile) %}
<label class=" {% if error_flag %}has-error{% endif %}">
	Image
</label>
{{ form_widget(form.imageFile) }}
{% if error_flag %}
	<div class="has-error">
		{{ form_errors(form.imageFile) }}
	</div>
{% endif %}

{{ form_row(form.link_description) }}
<div class="d-flex align-items-end">
	{{ form_row(form.link) }}
	<div class="alert alert-info ml-4" role="alert">
		Votre lien doit commencer avec http:// ou https:// et doit finir avec un pointquelquechose.
	</div>
</div>

{{ form_row(form.difficulty) }}
{{ form_row(form.level) }}

<div class="d-flex align-items-end">
	{{ form_row(form.realisation_time) }}
	<div class="alert alert-info ml-4" role="alert">
		Indiquez ici combien de temps votre apprenant·e aura besoin pour realiser cette activité.
	</div>
</div>

<div class="d-flex align-items-end">
	{{ form_row(form.visibility) }}
	<div class="alert alert-info ml-4" role="alert">
		{% if questionnaire.lessons|length > 0 %}
			Cette action rendra visible votre activité dans votre module et dans la boîte à outils.
		{% else %}
			Cette action rendra visible votre activité dans la boîte à outils.
		{% endif %}
	</div>
</div>
<button type="submit" class="btn btn-primary">{{ button|default('Create') }}</button>
{{ form_end(form) }}
