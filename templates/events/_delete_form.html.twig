<form method="post" action="{{ path('events_delete', {'id_events': event.id_events}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id_events) }}">
    <button class="btn">Delete</button>
</form>
