{% extends 'base.html.twig' %}

{% block title %}Student - {{ student.name }}{% endblock %}

{% block logo %}
    <a class="navbar-brand ml-4" href="{{ path('student_index') }}">
        <img src="{{ asset('images/logo-carpa.png') }}" width="55" height="55" alt="logo ubuntu">
    </a>
{% endblock %}

{% block home %}
    <li class="nav-item">
        <a class="nav-link" href="{{ path('student_index') }}">Home</a>
    </li>
{% endblock %}

{% block profile %}
    <li class="nav-item">
        <a class="nav-link mr-2" href="{{ path('student_profile') }}">
            <img class="profile" src="{{ asset('images/profile.png') }}" alt="profile icon"></a>
    </li>
{% endblock %}

{% block body %}
    <h1>Bienvenido {{ student.name }}</h1>
    <h3>Questionnaire List</h3>
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col"></th>
            <th scope="col">Name</th>
            <th scope="col">Difficutlt√©e</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {% for questionnaire in questionnaires %}
            <tr>
                <th scope="row">{{ questionnaire.id }}</th>
                <td>{{ questionnaire.title }}</td>
                {% if questionnaire.difficulty == 'facile' %}
                    <td><span class="badge badge-success">{{ questionnaire.difficulty }}</span></td>
                {% elseif questionnaire.difficulty == 'difficile' %}
                    <td><span class="badge badge-danger">{{ questionnaire.difficulty }}</span></td>
                {% else %}
                    <td><span class="badge badge-secondary">{{ questionnaire.difficulty }}</span></td>
                {% endif %}

                <td>
                    <a href="{{ path('questionnaire_play', {id: questionnaire.id}) }}" class="btn btn-primary"
                       role="button">Play</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
