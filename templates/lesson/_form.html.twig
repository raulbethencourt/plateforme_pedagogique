{{ form_row(form.level) }}

<div class="d-flex justify-content-between align-items-center">
	{{ form_row(form.visibility) }}
	<div class="alert alert-info" role="alert">
		{% if lesson.classrooms|length > 0 %}
			Cette action rendra visible votre module dans votre classe et dans la boîte à outils.
        {% else %}
            Cette action rendra visible votre module dans la boîte à outils.
		{% endif %}
	</div>
</div>
<button type="submit" class="btn btn-primary">{{ button|default('Create') }}</button>
{{ form_end(form) }}
