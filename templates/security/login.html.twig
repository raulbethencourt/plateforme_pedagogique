{% extends 'security/security_base.html.twig' %}

{% block title %}Connexion 
{% endblock %}

{% block body %}
	<div class="container-sm d-flex flex-column align-items-center pt-5 mt-5">
		<img src="{{ asset('images/cp-logo.webp') }}" alt="logo ubuntu" class="mb-2 img--rounded" style="width: 100px; height: auto">
		<h2 class="login__title">CONTACT
			<span class="text--red">et</span>
			PROMOTION</h2>
		<div class="login-form__container">
			<form method="post" class="border rounded p-4 shadow">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						Vous êtes connecté en tant que
						{{ app.user.username }},
						<a href="{{ path('app_logout') }}">Se déconnecter</a>
					</div>
				{% endif %}

				<label for="inputUsername" class="font-weight-bold text-white">Nom d'utilisateur·rice</label>
				<input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
				<label for="inputPassword" class="font-weight-bold mt-2 text-white">Mot de passe</label>
				<input type="password" name="password" id="inputPassword" class="form-control" required>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<button class="btn btn-sm btn-warning rounded-pill w-100 mt-3" type="submit">
					Se connecter
				</button>
			</form>
            <div>
                <a href="{{ path('app_forgot_password_request') }}">Mot de pass oublié...</a>
            </div>
		</div>
	</div>
{% endblock %}
